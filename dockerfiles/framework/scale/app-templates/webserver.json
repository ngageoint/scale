{
    "id": "scale-template-webserver",
    "cpus": 0.5,
    "mem": 512,
    "disk": 0,
    "instances": 1,
    "container": {
        "docker": {
            "image": "geoint/scale",
            "network": "BRIDGE",
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 0,
                    "protocol": "tcp",
                    "labels": {
                        "VIP_0": "/scale-template-webserver:80"
                    }
                }
            ],
            "forcePullImage": true
        },
        "type": "DOCKER"
    },
    "env": {
        "DCOS_PACKAGE_FRAMEWORK_NAME": "scale",
        "ENABLE_WEBSERVER": "true",
        "SCALE_BROKER_URL": "amqp://localhost:5672",
        "SCALE_STATIC_URL": "/service/scale/static/",
        "SCALE_WEBSERVER_CPU": "0.5",
        "SCALE_WEBSERVER_MEMORY": "512",
        "ELASTICSEARCH_URL": ""
    },
    "labels": {
        "HAPROXY_GROUP": "internal,external",
        "HAPROXY_0_VHOST": "api-scale.marathon.mesos",
        "HAPROXY_0_BACKEND_HTTP_OPTIONS": "http-request add-header X-Forwarded-Proto https if { ssl_fc }\nhttp-request set-header X-HAPROXY 1\nrspadd Access-Control-Allow-Methods:\\ GET,\\ POST,\\ PUT,\\ PATCH,\\ OPTIONS,\\ DELETE\nrspadd Access-Control-Allow-Headers:\\ Origin,\\ X-Requested-With,\\ Content-Type,\\ Accept,\\ Authorization\n",
        "HAPROXY_0_REDIRECT_TO_HTTPS": "true"
    },
    "healthChecks": [
        {
            "path": "/api/v6/version/",
            "protocol": "MESOS_HTTP",
            "gracePeriodSeconds": 300,
            "intervalSeconds": 30,
            "portIndex": 0,
            "timeoutSeconds": 15,
            "maxConsecutiveFailures": 3
        }
    ],
    "uris": []
}
