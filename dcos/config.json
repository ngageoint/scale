{
  "properties": {
    "scale": {
      "properties": {
        "framework-name": {
          "type": "string",
          "description": "The name of the framework. MUST BE LOWERCASE!",
          "default": "scale"
        },
        "master": {
          "type": "string",
          "description": "Mesos Master",
          "default": "zk://master.mesos:2181/mesos"
        },
        "secret-key": {
          "type": "string",
          "description": "Scale Secret key",
          "default": "15tryuv4t3hugbv7890aQ"
        },
        "allowed-hosts": {
          "type": "string",
          "description": "Allowed Hosts",
          "default": "*"
        },
        "db-name": {
          "type": "string",
          "description": "DB Name",
          "default": "scale"
        },
        "db-user": {
          "type": "string",
          "description": "DB User",
          "default": "scale"
        },
        "db-pass": {
          "type": "string",
          "description": "DB Password",
          "default": "scale"
        },
        "db-host": {
          "type": "string",
          "description": "DB Hostname",
          "default": "scale-db.marathon.slave.mesos"
        },
        "db-port": {
          "type": "string",
          "description": "DB Port",
          "default": "5432"
        },
        "deploy-db": {
          "type": "string",
          "description": "Deploy the dockerized postgres DB (true or false). Must supply db-host, db-user, db-pass, and db-port",
          "default": "true"
        },
        "deploy-logging": {
          "type": "string",
          "description": "Deploy the dockerized logstash process (true or false). Elasticsearch must already be running via marathon. Marathon will be queried for the elasticsearch addresses.",
          "default": "true"
        },
        "elasticsearch-url": {
          "type": "string",
          "description": "URL for the elasticsearch server",
          "default": "http://elasticsearch.marathon.mesos:31105"
        },
        "init-db": {
          "type": "string",
          "description": "Initialize the postgres DB (true or false). Must supply db-host, db-user, db-pass, and db-port",
          "default": "true"
        },
        "load-country-data": {
          "type": "string",
          "description": "Load defauly country borders into the database.",
          "default": "true"
        },
        "logstash-address": {
          "type": "string",
          "description": "Address for logstash service.",
          "default": ""
        },
        "nfs-postgres-uid": {
          "type": "string",
          "description": "UID of network postgres user",
          "default": "26"
        },
        "nfs-postgres-gid": {
          "type": "string",
          "description": "GID of network postgres user",
          "default": "26"
        },
        "marathon-lb-port": {
          "type": "integer",
          "description": "Marathon LoadBalancer port for Scale Web GUI",
          "default": 8008
        },
        "db-host-vol": {
          "type": "string",
          "description": "Path to persistent storage",
          "default": ""
        },
        "vhost-name": {
          "type": "string",
          "description": "Virtual Hostname for Marathon-LB",
          "default": "marathon-lb.marathon.mesos"
        },
        "zk-url-enable": {
          "default": false,
          "description": "Enable/Disable Scheduler Election",
          "type": "boolean"
        },
        "zk-url": {
          "default": "zk://master.mesos:2181/scale",
          "description": "Zookeeper URL for Scheduler Election",
          "type": "string"
        }
      },
      "required": ["framework-name"],
      "type": "object"
    }
  },
  "type": "object"
}

